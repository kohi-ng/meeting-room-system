# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local PostgreSQL: postgresql://postgres:admin123@localhost:5432/meeting_room_db
# Or use online service: https://render.com, https://elephantsql.com
DATABASE_URL=postgresql://postgres:admin123@localhost:5432/meeting_room_db

# JWT Configuration
JWT_SECRET=your_super_secure_random_key_min_32_chars_change_this
JWT_EXPIRE=7d

# Google OAuth - Get from https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Google APIs
GOOGLE_API_KEY=your_google_api_key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Service (Gmail)
# Get app password from: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here
